<p id="notice"><%= notice %></p>

<p>
  <strong>Player:</strong>
  <%= @shogi.Player %>
</p>

<p>
  <strong>Favoritestrategy:</strong>
  <%= @shogi.FavoriteStrategy %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@shogi.picture_url, width: 600) if @shogi.picture.present? %>
</p>
<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
  </div>
<% end %>
<%= render 'comments/form', comment: @comment %>

<%= link_to 'Edit', edit_shogi_path(@shogi) %> |
